doctype html
html
 head
  meta(charset='utf-8')
 body
  h1
   a(href="/topic") My Favorite stack
  ul 
   each topic in topics
    li 
     a(href=`/topic/${topic.id}`)=topic.title
  article
   h1= `Delete ${topic.title}?`
   form(action=`/topic/${topic.id}`+'/delete' method='post')
    button Yes
    button
     a(href=`/topic/${topic.id}`) No